<div class="modal-header">
    <h4 class="modal-title" role="heading">Editar</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div>
        <div class="form-group">
            <legend>
                <label for="nome">Nome:</label>
            </legend>
            <input type="text" id="nome-edit" name="nome" class="color-btn control" placeholder="Digite seu nome">
        </div>
        <div class="form-group">
            <legend>
                <label for="email">Email:</label>
            </legend>
            <input type="email" id="email-edit" name="email" class="color-btn control" placeholder="Digite seu e-mail">
        </div>
        <div class="register-btn">
            <button type="submit" class="btn btn-primary btn-xl btn-client-edit" >Editar</button>
        </div>
        
        <div class="del-btn">
            <button type="submit" class="btn btn-danger btn-xl btn-client-del" data-toggle="modal" data-target="#delModal">Excluir</button>
        </div>
    </div>
</div>